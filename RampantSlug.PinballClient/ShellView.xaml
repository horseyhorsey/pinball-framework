<Controls:MetroWindow 
    x:Class="RampantSlug.PinballClient.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:LogMessages="clr-namespace:RampantSlug.PinballClient.ClientDisplays.LogMessages"
        xmlns:SwitchMatrix="clr-namespace:RampantSlug.PinballClient.ClientDisplays.SwitchMatrix"
        xmlns:DeviceConfiguration="clr-namespace:RampantSlug.PinballClient.ClientDisplays.DeviceConfiguration"
        xmlns:DeviceTree="clr-namespace:RampantSlug.PinballClient.ClientDisplays.DeviceTree"
        xmlns:Local="clr-namespace:RampantSlug.PinballClient"
        Width="1280"
        Height="600"
                      >

    <Grid Background="#FFC1C0C0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid
            Margin="2"
            Background="#FFECECEC"
            >
            <Button 
            x:Name="GetSettings"
            Content="Get Settings" 
            Width="100"
            Height="28"
            
            />
            
        </Grid>
        
        
        <!-- Left Hand Column Area -->
        <DeviceTree:DeviceTreeView 
            Grid.Column="0"
            Grid.Row="1"
            Grid.RowSpan="2"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding DeviceTree}" />

        <!-- Middle (Main) Column Area -->
        <Local:MidPanelView 
            Grid.Column="1"
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding MidPanel}" />

        <!--<Grid
            Grid.Column="1"
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="2"
            Background="#FFECECEC"
            >
            <TabControl 
                x:Name="MidTabs"
                TabStripPlacement="Bottom"
                >
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock 
                        Text="{Binding DisplayName}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
        </Grid>-->
 
        <!-- Right Hand Column Area -->
        <Grid
            Grid.Column="2"
            Grid.Row="0"
            Grid.RowSpan="2"
            Margin="2"
            Background="#FFECECEC"
            >
            <TabControl 
                x:Name="RightTabs"
                TabStripPlacement="Bottom"         
                >
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
            </TabControl>
        </Grid>

        <!-- Bottom Row Area -->
        <LogMessages:LogMessagesView 
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="2"
            Margin="2"
            Background="#FFECECEC"
            cal:View.Model="{Binding LogMessages}"          
            />
        <!--   <TabControl 
            x:Name="Items"
            TabStripPlacement="Bottom"
            >
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ClientDisplayName}" />
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>-->
    </Grid>

</Controls:MetroWindow>