<UserControl x:Class="RampantSlug.PinballClient.ClientDisplays.DeviceTree.DeviceTreeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:DeviceTree="clr-namespace:RampantSlug.PinballClient.ClientDisplays.DeviceTree"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:DeviceTypes="clr-namespace:RampantSlug.PinballClient.ClientDisplays.DeviceTree.DeviceTypes">
        <TreeView 
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding FirstGeneration}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="FontWeight" Value="Normal" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                           <!-- <Setter Property="FontWeight" Value="Bold" />-->
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>



            <TreeView.Resources>
                <HierarchicalDataTemplate 
                    DataType="{x:Type DeviceTree:DeviceTypeViewModel}" 
                    ItemsSource="{Binding Children}"
                    >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding DeviceTypeName}" />
                        <StackPanel.ContextMenu >
                            <ContextMenu>
                                <MenuItem 
                                    FontWeight="Bold" 
                                    Header="Add Device" 
                                    cal:Message.Attach="AddDevice()"                                   
                                    />
                        </ContextMenu>
                    </StackPanel.ContextMenu>
                </StackPanel>
                </HierarchicalDataTemplate>
           <!-- Switches -->
            <DataTemplate DataType="{x:Type DeviceTypes:SwitchViewModel}">
                    <StackPanel 
                        Orientation="Horizontal"
                        Tag="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TreeView}}"
                        >

                        <TextBlock 
                            Text="{Binding SwitchName}" />
 
                        <Button
                            Margin="10,0,10,0"
                            Style="{StaticResource AccentedSquareButtonStyle}"
                            Content="{Binding SwitchState}"
                            cal:Message.Attach="ActivateDeviceState()"
                            ></Button>
                        
                       <!-- <TextBlock
                        Margin="10,0,10,0"
                      
                            Text="{Binding SwitchState}"
                            cal:Message.Attach="ActivateDeviceState()"
                            />-->

                    <StackPanel.ContextMenu >
                            <ContextMenu>
                                <MenuItem 
                                    FontWeight="Bold" 
                                    Header="Configure Switch" 
                                    cal:Message.Attach="ConfigureDevice()"
                                    
                                    />
                            </ContextMenu>
                        </StackPanel.ContextMenu>
                    </StackPanel>
                </DataTemplate>

            <!-- Coils -->
            <DataTemplate DataType="{x:Type DeviceTypes:CoilViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding CoilName}" />
                </StackPanel>
            </DataTemplate>

            <!-- Servos -->
            <DataTemplate DataType="{x:Type DeviceTypes:ServoViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding ServoName}" />
                </StackPanel>
            </DataTemplate>

            <!-- Stepper Motors -->
            <DataTemplate DataType="{x:Type DeviceTypes:StepperMotorViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding StepperMotorName}" />
                    <StackPanel.ContextMenu >
                        <ContextMenu>
                            <MenuItem 
                                    Header="Rotate Right" 
                                    cal:Message.Attach="RotateRight()"                                 
                                    />
                            <MenuItem 
                                    Header="Rotate Left" 
                                    cal:Message.Attach="RotateLeft()"                                 
                                    />
                        </ContextMenu>
                    </StackPanel.ContextMenu>
                </StackPanel>
            </DataTemplate>

            <!-- DC Motors -->
            <DataTemplate DataType="{x:Type DeviceTypes:DCMotorViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding DCMotorName}" />
                </StackPanel>
            </DataTemplate>

            <!-- Leds -->
            <DataTemplate DataType="{x:Type DeviceTypes:LedViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding LedName}" />
                </StackPanel>
            </DataTemplate>

        </TreeView.Resources>

        </TreeView>
</UserControl>


