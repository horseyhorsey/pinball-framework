<UserControl x:Class="RampantSlug.PinballClient.ClientDisplays.DeviceInformation.SwitchConfigurationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        >
    <Grid
        Background="Bisque"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        
        <TextBlock
            Grid.Column="1"
            Grid.Row="2"
            x:Name="LastChangeTimeStamp"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="12" />
        
        <!-- Status Image -->
        
        
        <!-- Control Section -->
        <Grid
            Grid.Column="1"
            Grid.Row="0"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="12" 
                Text="CONTROL"
                Foreground="{StaticResource AccentColorBrush}"
                />
            <TextBlock
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                x:Name="State"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="16" />
            <Button 
                Grid.Column="0"
                Grid.Row="2"
                x:Name="ToggleState"
                Content="Toggle"
                />
            <Button 
                Grid.Column="1"
                Grid.Row="2"
                x:Name="LockState"
                Content="Lock"
                />
            </Grid>

        
        
        <!-- History -->
        

        <!-- Settings Section -->
        <Grid
            Grid.Column="2"
            Grid.Row="0"
            Grid.RowSpan="2"
            Background="BlueViolet"
            >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontSize="12" 
                Text="SETTINGS"
                Foreground="{StaticResource AccentColorBrush}"
                />

            <TextBlock
                Grid.Column="0"
                Grid.Row="1"
                Text="Name"
                VerticalAlignment="Center"
                HorizontalAlignment="Left" 
                />
            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                x:Name="Name"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"                
                />
            <TextBlock
                Grid.Column="0"
                Grid.Row="2"
                Text="Address"
                VerticalAlignment="Center"
                HorizontalAlignment="Left" 
                />
            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                x:Name="Address"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />
            <TextBlock
                Grid.Column="0"
                Grid.Row="3"
                Text="Type"
                VerticalAlignment="Center"
                HorizontalAlignment="Left" 
                />
            <TextBox
                Grid.Column="1"
                Grid.Row="3"
                x:Name="SwitchType"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                />


       <!--     <TextBlock
            Grid.Column="0"
            Grid.Row="3"
            x:Name="WiringColors"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="12" />

            <TextBlock
            Grid.Column="0"
            Grid.Row="4"
            Text="Physical Location: "
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="12" />
            <TextBlock
            Grid.Column="0"
            Grid.Row="5"
            Text="Virtual Location:"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            FontSize="12" />-->


            <Button
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.Row="7"
            x:Name="SaveDevice"
            Content="Save Device"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
                Height="24"
            />

        </Grid>
        
     

    </Grid>
</UserControl>
